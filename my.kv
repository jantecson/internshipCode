<CreateAccountWindow>:

    name: "create"

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                color: (0,0,0,1)
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Name: "
                color: (0,0,0,1)
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.45, "top":0.78}
                size_hint: 0.5, 0.08
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4
                background_normal: 'white.png'
                background_active: 'white.png'

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Email: "
                color: (0,0,0,1)
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.45, "top":0.65}
                size_hint: 0.5, 0.08
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4
                background_normal: 'white.png'
                background_active: 'white.png'

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                color: (0,0,0,1)
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.45, "top":0.52}
                size_hint: 0.5, 0.08
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4
                background_normal: 'white.png'
                background_active: 'white.png'

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            background_color: (166/255, 200/255, 255/255, 1)
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Already have an Account? \n                  Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            background_color: (166/255, 200/255, 255/255, 1)
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


